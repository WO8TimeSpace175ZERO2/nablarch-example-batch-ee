<job id="etl-zip-code-csv-to-db-chunk" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">

  <listeners>
    <listener ref="nablarchJobListenerExecutor" />
  </listeners>

  <step id="truncate" next="file-check">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
    </listeners>
    <batchlet ref="tableCleaningBatchlet" />
  </step>
  
  <step id="file-check" next="extract">
    <listeners>
      <listener ref="errorLogWriteStepListener" />
    </listeners>
    <batchlet ref="fileCheckBatchlet" />
  </step>

  <step id="extract" next="validation">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="nablarchItemWriteListenerExecutor" />
      <listener ref="progressPrintListener" />
    </listeners>
    <chunk item-count="3000">
      <reader ref="customFileItemReader" />
      <writer ref="databaseItemWriter" />
    </chunk>
  </step>

  <step id="validation" next="load">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="errorLogWriteStepListener" />
    </listeners>
    <batchlet ref="validationApplicationErrorLogBatchlet" />
  </step>

  <step id="load">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="nablarchItemWriteListenerExecutor" />
      <listener ref="progressPrintListener" />
      <listener ref="errorLogWriteStepListener" />
    </listeners>
    <chunk item-count="3000">
      <reader ref="customDatabaseItemReader" />
      <writer ref="databaseItemWriter" />
    </chunk>
  </step>

</job>